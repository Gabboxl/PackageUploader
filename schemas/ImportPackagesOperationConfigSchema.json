{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ImportPackagesOperationConfigSchema.json",
  "title": "ImportPackagesOperationConfig",
  "description": "Input config file structure for the package uploader Import Packages Operation",
  "type": "object",
  "definitions": {
    "gamePackageDate": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "effectiveDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "properties": {
    "operationName": {
      "type": "string",
      "const": "ImportPackages"
    },
    "productId": {
      "type": "string"
    },
    "bigId": {
      "type": "string"
    },
    "branchFriendlyName": {
      "type": "string"
    },
    "flightName": {
      "type": "string"
    },
    "marketGroupName": {
      "type": "string"
    },
    "destinationBranchFriendlyName": {
      "type": "string"
    },
    "destinationFlightName": {
      "type": "string"
    },
    "availabilityDate": {
      "$ref": "#/definitions/gamePackageDate"
    },
    "mandatoryDate": {
      "$ref": "#/definitions/gamePackageDate"
    },
    "gradualRollout": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "percentage": {
          "type": "number"
        },
        "isSeekEnabled": {
          "type": "boolean"
        }
      }
    }
  },
  "oneOf": [
    {
      "required": [
        "operationName",
        "productId",
        "branchFriendlyName",
        "destinationBranchFriendlyName"
      ]
    },
    {
      "required": [
        "operationName",
