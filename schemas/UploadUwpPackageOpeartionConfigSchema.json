{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "UploadUwpPackageOpeartionConfigSchema.json",
  "title": "UploadUwpPackageOpeartionConfig",
  "description": "Input config file structure for the package uploader Upload UWP Package Operation",
  "type": "object",
  "definitions": {
    "gamePackageDate": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "effectiveDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "properties": {
    "operationName": {
      "type": "string",
      "const": "UploadUwpPackage"
    },
    "productId": {
      "type": "string"
    },
    "bigId": {
      "type": "string"
    },
    "branchFriendlyName": {
      "type": "string"
    },
    "flightName": {
      "type": "string"
    },
    "marketgroupName": {
      "type": "string",
      "default": "default"
    },
    "minutesToWaitForProcessing": {
      "type": "number",
      "min": 0,
      "max": 360,
      "default": 30
    },
    "packageFilePath": {
      "type": "string"
    },
    "availabilityDate": {
      "$ref": "#/definitions/gamePackageDate"
    },
    "mandatoryDate": {
      "$ref": "#/definitions/gamePackageDate"
    },
    "gradualRollout": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "percentage": {
          "type": "number"
        },
        "isSeekEnabled": {
          "type": "boolean"
        }
      }
    }
  },
  "oneOf": [
    {
      "required": [
        "operationName",
        "productId",
        "branchFriendlyName",
        "packageFilePath"
      ]
    },
    {
      "required": [
        "operationName",
        "productId",
        "flightName",
        "packageFilePath"
      ]
    },
    {
      "required": [
        "operationName",
        "bigId",
        "branchFriendlyName",
        "packageFilePath"
      ]
    },
    {
      "required": [
        "operationName",
        "bigId",
        "flightName",
        "packageFilePath"
      ]
    }
  ]
}