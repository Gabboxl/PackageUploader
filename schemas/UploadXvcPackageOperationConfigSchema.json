{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "UploadXvcPackageOpeartionConfigSchema.json",
  "title": "UploadXvcPackageOpeartionConfig",
  "description": "Input config file structure for the package uploader Upload XVC Package Operation",
  "type": "object",
  "definitions": {
    "gamePackageDate": {
      "type": "object",
      "properties": {
        "isEnabled": {
          "type": "boolean"
        },
        "effectiveDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "gameAssets": {
      "type": "object",
      "properties": {
        "ekbFilePath": {
          "type": "string"
        },
        "subValFilePath": {
          "type": "string"
        },
        "symbolsFilePath": {
          "type": "string"
        },
        "discLayoutFilePath": {
          "type": "string"
        }
      },
      "required": [
        "ekbFilePath",
        "subValFilePath"
      ]
    }
  },
  "properties": {
    "operationName": {
      "type": "string",
      "const": "UploadXvcPackage"
    },
    "productId": {
      "type": "string"
    },
    "bigId": {
      "type": "string"
    },
    "branchFriendlyName": {
      "type": "string"
    },
    "flightName": {
      "type": "string"
    },
    "marketgroupName": {
      "type": "string",
      "default": "default"
    },
    "minutesToWaitForProcessing": {
      "type": "number",
      "min": 0,
      "max": 360,
      "default": 30
    },
    "packageFilePath": {
      "type": "string"
    },
    "availabilityDate": {
      "$ref": "#/definitions/gamePackageDate"
    },
    "gameAssets": {
      "$ref": "#/definitions/gameAssets"
    }
  },
  "oneOf": [
    {
      "required": [
        "operationName",
        "productId",
        "branchFriendlyName",
        "packageFilePath",
        "gameAssets"
      ]
    },
    {
      "required": [
        "operationName",
        "productId",
        "flightName",
        "packageFilePath",
        "gameAssets"
      ]
    },
    {
      "required": [
        "operationName",
        "bigId",
        "branchFriendlyName",
        "packageFilePath",
        "gameAssets"
      ]
    },
    {
      "required": [
        "operationName",
        "bigId",
        "flightName",
        "packageFilePath",
        "gameAssets"
      ]
    }
  ]
}