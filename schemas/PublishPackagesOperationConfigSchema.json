{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "PublishPackagesOperationConfigSchema.json",
  "title": "PublishPackagesOperationConfig",
  "description": "Input config file structure for the package uploader Publish Packages Operation",
  "type": "object",
  "definitions": {
    "publishConfiguration": {
      "type": "object",
      "properties": {
        "releaseTime": {
          "type": "string",
          "format": "date-time"
        },
        "isManualPublish": {
          "type": "boolean",
          "default": false
        },
        "certificationNotes": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "operationName": {
      "type": "string",
      "const": "PublishPackages"
    },
    "productId": {
      "type": "string"
    },
    "bigId": {
      "type": "string"
    },
    "branchFriendlyName": {
      "type": "string"
    },
    "flightName": {
      "type": "string"
    },
    "destinationSandboxName": {
      "type": "string"
    },
    "minutesToWaitForPublishing": {
      "type": "number"
    },
    "publishConfiguration": {
      "$ref": "#/definitions/publishConfiguration"
    }
  },
  "oneOf": [
    {
      "required": [
        "operationName",
        "productId",
        "branchFriendlyName",
        "destinationSandboxName"
      ]
    },
    {
      "required": [
        "operationName",
        "productId",
        "flightName",
        "destinationSandboxName"
      ]
    },
    {
      "required": [
        "operationName",
        "bigId",
        "branchFriendlyName",
        "destinationSandboxName"
      ]
    },
    {
      "required": [
        "operationName",
        "bigId",
        "flightName",
        "destinationSandboxName"
      ]
    }
  ]
}